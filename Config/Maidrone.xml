<?xml version="1.0" encoding="utf-8"?>
<Config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
<!-- キーボード操作設定 -->
  <KbBoot>F11</KbBoot>
  <KbPrintInfo>Space</KbPrintInfo>
  <KbSwitchCamera>Tab</KbSwitchCamera>
  <KbSwitchAlgorithm>Backspace</KbSwitchAlgorithm>
  <KbToggleFocus>M</KbToggleFocus>
  <KbFindPrev>Comma</KbFindPrev>
  <KbFindNext>Period</KbFindNext>
  <KbResetPosition>R</KbResetPosition>
  <KbMoveStop>LeftControl</KbMoveStop>
  <KbMoveForward>W</KbMoveForward>
  <KbMoveBackward>S</KbMoveBackward>
  <KbMoveLeft>A</KbMoveLeft>
  <KbMoveRight>D</KbMoveRight>
  <KbMoveUp>LeftShift</KbMoveUp>
  <KbMoveDown>RightShift</KbMoveDown>
  <KbRotateUp>DownArrow</KbRotateUp>
  <KbRotateDown>UpArrow</KbRotateDown>
  <KbRotateLeft>LeftArrow</KbRotateLeft>
  <KbRotateRight>RightArrow</KbRotateRight>
<!-- ジョイスティック操作設定 (Xbox360コントローラを想定) -->
<!-- JoystickButton0 ... A
     JoystickButton1 ... B
     JoystickButton2 ... X
     JoystickButton3 ... Y
     JoystickButton4 ... LB
     JoystickButton5 ... RB
     JoystickButton6 ... BACK
     JoystickButton7 ... START
     JoystickButton8 ... LS
     JoystickButton9 ... RS
     Oculus_GearVR_LThumbstickX ... LeftStick AxisX
     Oculus_GearVR_LThumbstickY ... LeftStick AxisY
     Oculus_GearVR_RThumbstickX ... LT & RT
     Oculus_GearVR_RThumbstickY ... RightStick AxisX
     Oculus_GearVR_DpadX ... RightStick AxisY
-->
  <JsSwitchCamera>JoystickButton0</JsSwitchCamera>
  <JsPrintInfo>JoystickButton1</JsPrintInfo>
  <JsMoveStop>JoystickButton2</JsMoveStop>
  <JsFindPrev>JoystickButton4</JsFindPrev>
  <JsFindNext>JoystickButton5</JsFindNext>
  <JsSwitchAlgorithm>JoystickButton6</JsSwitchAlgorithm>
  <JsBoot>JoystickButton7</JsBoot>
  <JsResetPosition>JoystickButton8</JsResetPosition>
  <JsToggleFocus>JoystickButton9</JsToggleFocus>
  <JsMoveX>Oculus_GearVR_LThumbstickX</JsMoveX>
  <JsMoveZ>Oculus_GearVR_LThumbstickY</JsMoveZ>
  <JsMoveY>Oculus_GearVR_RThumbstickX</JsMoveY>
  <JsRotateY>Oculus_GearVR_RThumbstickY</JsRotateY>
  <JsRotateX>Oculus_GearVR_DpadX</JsRotateX>
  <JsFlipRotateX>false</JsFlipRotateX>
  <JsFlipRotateY>true</JsFlipRotateY>
  <CameraPitchSpeed>15.0</CameraPitchSpeed>
  <CameraDistance>0.25</CameraDistance>
  <CameraFovFp>60.0</CameraFovFp>
  <CameraFovTp>45.0</CameraFovTp>
  <ModelScale>0.05</ModelScale>
  <ModelLissajous>
    <Position><x>0</x><y>0</y><z>0</z></Position>
    <Amplitude><x>0</x><y>0.005</y><z>0</z></Amplitude>
    <Frequency><x>0</x><y>0.3333</y><z>0</z></Frequency>
    <Offset><x>0</x><y>0</y><z>0</z></Offset>
  </ModelLissajous>
  <ManualSetting>
    <Position><x>0</x><y>1.0</y><z>0</z></Position>
    <RotSpeed>15</RotSpeed>
    <AccelXZ>0.25</AccelXZ>
    <AccelY>0.25</AccelY>
    <Brake>0.125</Brake>
  </ManualSetting>
  <WaypointSetting>
    <MoveSpeed>1.0</MoveSpeed>
    <Waypoints>
      <Waypoint><Position><x>-1</x><y>1</y><z>-1</z></Position><Rotation><x>0</x><y>45</y><z>0</z></Rotation></Waypoint>
      <Waypoint><Position><x>-1</x><y>1</y><z>1</z></Position><Rotation><x>0</x><y>135</y><z>0</z></Rotation></Waypoint>
      <Waypoint><Position><x>1</x><y>1</y><z>1</z></Position><Rotation><x>0</x><y>225</y><z>0</z></Rotation></Waypoint>
      <Waypoint><Position><x>1</x><y>1</y><z>-1</z></Position><Rotation><x>0</x><y>315</y><z>0</z></Rotation></Waypoint>
      <Waypoint><Position><x>-1</x><y>1</y><z>-1</z></Position><Rotation><x>0</x><y>405</y><z>0</z></Rotation></Waypoint>
    </Waypoints>
  </WaypointSetting>
  <LissajousSetting>
    <FocusMaid>true</FocusMaid>
    <FocusTransform>Bip01 Spine1</FocusTransform>
    <DefaultPosition><x>0</x><y>0.5</y><z>0</z></DefaultPosition><!-- メイドをフォーカスしていない、または見つからないときの初期位置 -->
    <Lissajous>
      <Position><x>0</x><y>0</y><z>0</z></Position>
      <Amplitude><x>0.5</x><y>0</y><z>0.5</z></Amplitude>
      <Frequency><x>0.05</x><y>0</y><z>0.05</z></Frequency>
      <Offset><x>0</x><y>0</y><z>90</z></Offset>
    </Lissajous>
  </LissajousSetting>
  <ScreenSaverSetting>
    <Enable>false</Enable>
    <Time>60</Time>
    <Algorithm>Lissajous</Algorithm><!-- Waypotins, Lissajous -->
    <FirstPersonView>true</FirstPersonView>
  </ScreenSaverSetting>
</Config>